# Recipe Lambda Environment Configuration Template
# Copy this file to .env and modify as needed for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Application URLs (for local development)
ASPNETCORE_URLS=http://localhost:5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development Database
DATABASE__CONNECTIONSTRING=Server=host.docker.internal;Database=RecipeApp_Dev;User=admin;Password=pass1234;
DATABASE__USEIMMEMORYFALLBACK=false
DATABASE_TYPE=mysql
DATABASE__COMMANDTIMEOUT=60
DATABASE__ENABLERETRYONFAILURE=true
DATABASE__MAXRETRYCOUNT=5

# Production Database (uncomment for production)
# DATABASE__CONNECTIONSTRING=Server=prod-db;Database=RecipeApp_Prod;User=app_user;Password=prod_password;
# CONNECTION_STRING=Server=prod-db;Database=RecipeApp_Prod;User=app_user;Password=prod_password;

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Development JWT Settings
JWT__SECRETKEY=development-super-secret-key-that-must-be-at-least-32-characters-long-for-local-dev
JWT__ISSUER=RecipeApp-Development
JWT__AUDIENCE=RecipeApp-API-Development
JWT__EXPIRATIONMINUTES=60
JWT__REFRESHTOKENEXPIRATIONMINUTES=10080

# Production JWT Settings (uncomment for production)
# JWT__SECRETKEY=production-super-secret-key-that-must-be-at-least-32-characters-long
# JWT__ISSUER=RecipeApp-Production
# JWT__AUDIENCE=RecipeApp-API-Production
# JWT__EXPIRATIONMINUTES=30
# JWT__REFRESHTOKENEXPIRATIONMINUTES=7200

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

# Production API Gateway (uncomment for production)
# APIGATEWAY__BASEURL=https://api.production.recipeapp.com
# APIGATEWAY__APIVERSION=v1
# APIGATEWAY__ENABLECORS=true
# APIGATEWAY__ALLOWEDORIGINS__0=https://recipeapp.com
# APIGATEWAY__ALLOWEDORIGINS__1=https://www.recipeapp.com
# APIGATEWAY__TIMEOUTSECONDS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Development Logging
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT=Warning
LOGGING__LOGLEVEL__SYSTEM=Warning
SERILOG__MINIMUMLEVEL__DEFAULT=Information

# Production Logging (uncomment for production)
# LOGGING__LOGLEVEL__DEFAULT=Warning
# LOGGING__LOGLEVEL__MICROSOFT=Error
# LOGGING__LOGLEVEL__SYSTEM=Error
# LOGGING__LOGLEVEL__ASPNETCORE=Error
# SERILOG__MINIMUMLEVEL__DEFAULT=Warning
# SERILOG__MINIMUMLEVEL__OVERRIDE__MICROSOFT=Error
# SERILOG__MINIMUMLEVEL__OVERRIDE__SYSTEM=Error