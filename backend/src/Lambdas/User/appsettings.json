{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "Server=host.docker.internal;Database=RecipeApp_Dev;User=admin;Password=pass1234;",
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "UseInMemoryFallback": true,
    "Provider": "mysql"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=host.docker.internal;Database=RecipeApp_Dev;User=admin;Password=pass1234;"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long",
    "Issuer": "RecipeApp",
    "Audience": "RecipeApp-API",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationMinutes": 10080
  },
  "ApiGateway": {
    "BaseUrl": "https://api.recipeapp.com",
    "ApiVersion": "v1",
    "EnableCors": true,
    "AllowedOrigins": ["http://localhost:8081", "https://recipeapp.com"],
    "TimeoutSeconds": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}