# User Lambda Environment Configuration Template
# Copy this file to .env and modify as needed for your local development

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Application Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Application URLs (local development)
ASPNETCORE_URLS=http://localhost:5001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: auto (tries MySQL, falls back to in-memory), mysql, inmemory
DATABASE_TYPE=auto

# Enable in-memory database fallback (true/false)
DATABASE__USEINMEMORYFALLBACK=true

# MySQL Connection String (uncomment and modify if using MySQL)
# CONNECTION_STRING=Server=localhost;Database=RecipeApp_Dev;User=root;Password=yourpassword;

# Database-specific settings (optional)
# DATABASE__COMMANDTIMEOUT=30
# DATABASE__ENABLERETRYONFAILURE=true
# DATABASE__MAXRETRYCOUNT=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels: Trace, Debug, Information, Warning, Error, Critical, None
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT=Warning
LOGGING__LOGLEVEL__SYSTEM=Warning

# Database-specific logging (useful for debugging)
LOGGING__LOGLEVEL__DATABASECONFIGURATION=Information

# Entity Framework logging (uncomment for SQL debugging)
# LOGGING__LOGLEVEL__MICROSOFT__ENTITYFRAMEWORKCORE=Debug

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================

# Show detailed error pages (Development only)
ASPNETCORE_DETAILEDERRORS=true

# =============================================================================
# JWT CONFIGURATION (if needed in future)
# =============================================================================

# JWT__SECRETKEY=your-super-secret-key-that-is-at-least-32-characters-long
# JWT__ISSUER=RecipeApp
# JWT__AUDIENCE=RecipeApp-API
# JWT__EXPIRATIONMINUTES=60

# =============================================================================
# API GATEWAY CONFIGURATION (if needed)
# =============================================================================

# APIGATEWAY__BASEURL=http://localhost:5000
# APIGATEWAY__APIVERSION=v1
# APIGATEWAY__ENABLECORS=true
# APIGATEWAY__TIMEOUTSECONDS=30

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployment, you typically want:
# ASPNETCORE_ENVIRONMENT=Production
# DATABASE_TYPE=mysql
# DATABASE__USEINMEMORYFALLBACK=false
# CONNECTION_STRING=Server=prod-server;Database=RecipeApp_Prod;...
# LOGGING__LOGLEVEL__DEFAULT=Warning