# User Lambda Environment Configuration Template
# Copy this file to .env and modify as needed for your local development

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Application Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Application URLs (local development)
ASPNETCORE_URLS=http://localhost:5001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Connection String (for host MySQL instance)
DATABASE__CONNECTIONSTRING=Server=host.docker.internal;Database=RecipeApp_Dev;User=admin;Password=pass1234;
DATABASE__USEIMMEMORYFALLBACK=false
DATABASE_TYPE=mysql

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT settings for authentication
JWT__SECRETKEY=development-super-secret-key-that-must-be-at-least-32-characters-long-for-local-dev
JWT__ISSUER=RecipeApp-Development
JWT__AUDIENCE=RecipeApp-API-Development
JWT__EXPIRATIONMINUTES=60
JWT__REFRESHTOKENEXPIRATIONMINUTES=10080