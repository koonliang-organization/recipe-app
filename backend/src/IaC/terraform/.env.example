# Environment Configuration for Recipe App Terraform Deployment
# Copy this file to .env and fill in the actual values

# Required: JWT Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_ISSUER=recipe-app
JWT_AUDIENCE=recipe-app-users

# Required: Database Connection (use empty string if no database)
DATABASE_CONNECTION_STRING=

# Optional: AWS and Environment Configuration
ENVIRONMENT=dev
AWS_REGION=ap-southeast-1

# Optional: AWS Profile (if using named profiles)
# AWS_PROFILE=default