# Docker Development Environment Configuration
# This file contains environment variables for docker-compose development

# Database Configuration
DATABASE__CONNECTIONSTRING=Server=mysql;Database=RecipeApp_Dev;User=root;Password=dev_password;
DATABASE__USEIMMEMORYFALLBACK=false
DATABASE_TYPE=mysql

# JWT Configuration
JWT__SECRETKEY=development-super-secret-key-that-must-be-at-least-32-characters-long-for-local-dev
JWT__ISSUER=RecipeApp-Development
JWT__AUDIENCE=RecipeApp-API-Development
JWT__EXPIRATIONMINUTES=60
JWT__REFRESHTOKENEXPIRATIONMINUTES=10080

# API Gateway Configuration
APIGATEWAY__BASEURL=http://localhost:3000
APIGATEWAY__APIVERSION=v1
APIGATEWAY__ENABLECORS=true
APIGATEWAY__ALLOWEDORIGINS__0=http://localhost:8081
APIGATEWAY__ALLOWEDORIGINS__1=http://127.0.0.1:8081
APIGATEWAY__TIMEOUTSECONDS=30

# Logging Configuration
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT=Warning
LOGGING__LOGLEVEL__SYSTEM=Warning
LOGGING__LOGLEVEL__ASPNETCORE=Information

# Serilog Configuration
SERILOG__MINIMUMLEVEL__DEFAULT=Information
SERILOG__MINIMUMLEVEL__OVERRIDE__MICROSOFT=Warning
SERILOG__MINIMUMLEVEL__OVERRIDE__SYSTEM=Warning

# Service URLs (for gateway configuration)
USER_SERVICE_URL=http://backend:5001
RECIPE_SERVICE_URL=http://backend:5000
AUTHORIZER_SERVICE_URL=http://backend:5002

# MySQL Configuration
MYSQL_ROOT_PASSWORD=dev_password
MYSQL_DATABASE=RecipeApp_Dev
MYSQL_USER=app_user
MYSQL_PASSWORD=dev_password

# Development settings
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development