# Environment Configuration for MyRecipeBox Frontend

# Anonymous Mode - Set to 'true' to enable demo mode with mock data
EXPO_PUBLIC_ANONYMOUS_MODE=false

# API Configuration
# Backend API base URL - update this to match your backend deployment
# For local development with Lambda functions running locally
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
# For AWS deployment, use the API Gateway URL (example):
# EXPO_PUBLIC_API_BASE_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/dev

# Development Settings
# Enable debug logging in development
EXPO_PUBLIC_DEBUG=true

# App Configuration
EXPO_PUBLIC_APP_NAME=MyRecipeBox
EXPO_PUBLIC_APP_VERSION=1.0.0